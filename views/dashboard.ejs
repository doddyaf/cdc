		<main>
			<section class="section section--dashboard">
				<div class="container">
					<div class="box">
						<h1 class="box__title">CDC ITI - Dashboard</h1>
						
						<h2 class="box__subtitle">Informasi Pengguna</h2>
						
						<div class="information">
							<div class="information__total_user">
								Total pengguna yang terdaftar : <span id="total-user"><%= total_user %></span>
							</div>
							<div class="information__total_answer">
								Total responden form Tracer Study : <span id="total-responden"><%= total_answer %></span>
							</div>
							<div class="information__total_post">
								Total Jobs Posts : <span id="total-post"><%= total_post %></span>
							</div>
							<div class="information__total_gallery">
								Total Gallery : <span id="total-gallery"><%= total_gallery %></span>
							</div>
						</div>

						<hr>

						<div class="edit-profile">
							<form action="/api/information" method="post" class="form form--edit-profile">
								<h2 class="box__subtitle">Edit Profile</h2>
								<div class="form-group">
									<label for="#field-edit-profile"></label>
									<textarea name="profile" class="field-profile form-control" id="field-edit-profile"><%= profile %></textarea>
								</div>
								<input type="submit" class="btn btn-primary" value="Save">
							</form>
						</div>

						<hr>

						<form action="/api/gallery" method="post" class="form form--gallery" enctype="multipart/form-data">
							
							<h2 class="box__subtitle">Upload Gallery</h2>

							<div class="form-group">
								<label for="field-gallery-image">Image</label>
								<input type="file" name="image" id="field-gallery-image">
							</div>
							
							<div class="form-group">
								<label for="field-gallery-description">Description</label>
								<textarea name="description" class="form-control" id="field-gallery-description"></textarea>
							</div>
							
							<button class="btn btn-primary">Upload</button>

						</form>

						<hr>
						
					</div>
				</div>
			</section>
